{
  "name": "hook-line-studio",
  "version": "1.0.0",
  "description": "AI-powered video hook generation platform with psychological framework integration",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && vite",
    "dev:server": "cd server && tsx watch index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "cd server && esbuild index.ts --platform=node --bundle --outfile=../dist/server.js --external:pg --external:firebase-admin",
    "vercel-build": "npm run build:production",
    "build:production": "cd client && npm install && npm run build && cd .. && npm run build:api",
    "build:api": "tsc --project server/tsconfig.json",
    "preview": "cd client && vite preview",
    "railway:build": "npm run prebuild:railway && npm run build",
    "prebuild:railway": "npm run ensure:linux-deps && npm run verify:esbuild",
    "ensure:linux-deps": "npm rebuild --platform=linux --arch=x64",
    "verify:esbuild": "esbuild --version",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx server/db/seed.ts",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "db:init": "tsx scripts/setup-database.ts",
    "setup:stripe-plans": "tsx scripts/create-stripe-plans.ts",
    "activate:stripe": "tsx scripts/activate-stripe-payments.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:client": "cd client && npm run test",
    "test:server": "jest --testPathPattern=server",
    "db:test-setup": "NODE_ENV=test npm run db:setup",
    "db:test-teardown": "NODE_ENV=test npm run db:reset"
  },
  "dependencies": {
    "@types/stripe": "^8.0.416",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.1",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "firebase-admin": "^12.7.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.70.1",
    "postgres": "^3.4.4",
    "stripe": "^18.4.0",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.8.0",
    "@types/uuid": "^10.0.0",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "@vercel/node": "^3.0.21",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.28.1",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "@playwright/test": "^1.44.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
